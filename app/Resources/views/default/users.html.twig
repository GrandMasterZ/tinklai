{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1> Neaktyvuoti vartotojai </h1>
        {% if disabledUsers %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>Vartotojo vardas</th>
                <th>Elektroninis paštas</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in disabledUsers %}
                <tr>
                    <td> {{ user.name }} </td>
                    <td> {{ user.surname }} </td>
                    <td> {{ user.username }} </td>
                    <td> {{ user.email }} </td>
                    <td> <a href="/activateUser/{{ user.id }}" class="btn btn-default"> Aktyvuoti </a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}

        {% if disabledUsers == null %}
            <p> Šiuo metu neaktyvuotu vartotojų nėra </p>
        {% endif %}

        <h1> Aktyvuoti vartotojai </h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>Vartotojo vardas</th>
                <th>Elektroninis paštas</th>
            </tr>
            </thead>
            <tbody>
        {% for user in users %}
            <tr>
                <td> {{ user.name }} </td>
                <td> {{ user.surname }} </td>
                <td> {{ user.username }} </td>
                <td> {{ user.email }} </td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}